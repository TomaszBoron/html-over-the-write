{% extends 'layout.twig' %}

{% block head %}
{% endblock %}

{% block main %}
  <div id="content">
    <!-- Hero Section -->
    <section class="bg-gray-200 text-gray-800 py-20">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold mb-4">Witamy w naszym sklepie!</h2>
        <p class="text-lg mb-6">Znajdź najlepsze produkty w najlepszych cenach.</p>
      </div>
    </section>

    <!-- Produkty -->
    <section class="container mx-auto px-4 py-12">
      <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">Nasze Produkty</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <!-- Produkt 1 -->
        <div class="bg-white rounded-2xl shadow p-4 text-center">
          <img src="https://plus.unsplash.com/premium_photo-1679513691474-73102089c117?q=80&w=2013&auto=format&fit=crop" alt="Słuchawki" class="mx-auto mb-4 rounded-xl" />
          <h4 class="text-lg font-semibold">Słuchawki Bezprzewodowe</h4>
          <p class="text-gray-700 font-bold mt-2">99 zł</p>
          <button class="mt-4 bg-gray-800 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition">Dodaj do koszyka</button>
        </div>
        <!-- Produkt 2 -->
        <div class="bg-white rounded-2xl shadow p-4 text-center">
          <img src="https://images.unsplash.com/photo-1526170375885-4d8ecf77b99f?auto=format&fit=crop&w=500&q=80" alt="Smartwatch" class="mx-auto mb-4 rounded-xl" />
          <h4 class="text-lg font-semibold">Smartwatch</h4>
          <p class="text-gray-700 font-bold mt-2">199 zł</p>
          <button class="mt-4 bg-gray-800 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition">Dodaj do koszyka</button>
        </div>
        <!-- Produkt 3 -->
        <div class="bg-white rounded-2xl shadow p-4 text-center">
          <img src="https://images.unsplash.com/photo-1585386959984-a4155224a1ad?auto=format&fit=crop&w=500&q=80" alt="Buty sportowe" class="mx-auto mb-4 rounded-xl" />
          <h4 class="text-lg font-semibold">Buty Sportowe</h4>
          <p class="text-gray-700 font-bold mt-2">249 zł</p>
          <button class="mt-4 bg-gray-800 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition">Dodaj do koszyka</button>
        </div>
      </div>
    </section>
  </div>
{% endblock %}
