{% extends 'base.html.twig' %}

{% block title %}About Us & Contact{% endblock %}

{% block body %}

    <turbo-frame id="contact_form">
    <div id="content" class="max-w-4xl mx-auto p-6">
        <div class="mb-12">
            <h1 class="text-3xl font-bold text-gray-800 mb-4">About Us</h1>
            <p class="text-gray-600">Welcome to our store! We're dedicated to providing the best service to our
                customers.</p>
        </div>

        <div class="bg-white shadow-lg rounded-lg p-6">
            <h2 class="text-2xl font-semibold text-gray-800 mb-6">Contact Us</h2>

            {% if formSuccess %}
            <div class="bg-green-100 text-green-800 p-4 rounded mb-6">
                <p class="font-medium">Thank you for your message! We will get back to you soon.</p>
            </div>
            {% else %}
            <form action="/contact" method="GET" class="space-y-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                    <input type="text" id="name" name="name" required
                           class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                </div>
                <div>
                    <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                    <textarea id="message" name="message" rows="4" required
                              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"></textarea>
                </div>
                <div>
                    <button type="submit"
                            class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Send Message
                    </button>
                </div>
            </form>
            {% endif %}

        </div>
    </div>
    </turbo-frame>
{% endblock %}
